    }
}

# Set here your locker
# If you use a wrapper, make sure that it accepts the no fork(-n) flag
set $Locker /usr/bin/i3lock -e -t

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker --color "$base01" && sleep 1, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker --color "$base01" && sleep 1 && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker --color "$base01" && sleep 1 && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id  systemctl poweroff -i, mode "default"

    #back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Pause mode "$mode_system"

